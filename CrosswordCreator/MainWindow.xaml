<Window x:Class="CrosswordCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrosswordCreator"
        xmlns:views="clr-namespace:CrosswordCreator.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0"
                        Orientation="Horizontal">
                <Label Content="Keresztrejtvény szerkesztő" FontWeight="Bold"/>
            </StackPanel>
            
            <StackPanel Grid.Row="0" Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource CloseButton}"
                        Click="Button_Click"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                
                <views:CrosswordLineView Grid.Row="1" x:Name="test"/>
                <views:CrosswordLineView Grid.Row="1" x:Name="test2"/>
                <views:CrosswordLineView Grid.Row="1" x:Name="test3"/>
                <views:CrosswordLineView Grid.Row="1" x:Name="test4"/>
                
            </StackPanel>

            <!--<ListView Grid.Row="1" Grid.ColumnSpan="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <views:CrosswordLineView />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                        Orientation="Horizontal">
                <Button Content="Új" Style="{StaticResource ButtonStyle}" />
                <Button Content="Mentés" Style="{StaticResource ButtonStyle}"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>
